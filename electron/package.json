{
  "name": "electron",
  "private": true,
  "version": "0.0.1",
  "productName": "signal",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run build -- --watch\" \"nodemon\"",
    "start": "npm run build && electron .",
    "build": "rollup -c --bundleConfigAsCjs",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "make:mas": "npm run make -- --arch=universal --platform=mas",
    "make:darwin": "npm run make -- --platform=darwin",
    "publish": "electron-forge publish",
    "generate-icon": "./scripts/icons.sh src/icons/Icon-macOS.png ./icons/icon.icns"
  },
  "author": "ryohey",
  "devDependencies": {
    "@electron-forge/cli": "7.3.0",
    "@electron-forge/maker-pkg": "^7.4.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "concurrently": "^8.2.2",
    "electron": "^29.3.0",
    "nodemon": "^3.1.0",
    "rollup": "^4.17.1",
    "typescript": "5.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-log": "^5.1.2",
    "express": "^4.19.2",
    "get-port-please": "^3.1.2"
  }
}
